<Window x:Class="CryptMe_Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptMe_Client"
        mc:Ignorable="d"
        Title="Login" Height="160" Width="220">
    <Grid>
        <StackPanel>
            <TextBox Height="25" x:Name="tbx_lName"/>
            <PasswordBox Height="25" x:Name="tbx_lPassword"/>
            <Button Height="25" Margin="0,20,0,0" Content="Login" x:Name="btn_Login"/>
            <Button Height="25" Content="Register" x:Name="btn_Register"/>
        </StackPanel>
    </Grid>
</Window>
