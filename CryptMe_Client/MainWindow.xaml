<Window x:Class="CryptMe_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptMe_Client"
        mc:Ignorable="d"
        Title="Crypt Service" Height="350" Width="525">
    <Grid x:Name="Main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" x:Name="EncBox" AllowDrop="True">
            <ListBox.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/EncIcon.png" Stretch="Uniform"/>
            </ListBox.Background>
        </ListBox>
        <ListBox Grid.Column="1" x:Name="KeyBox" AllowDrop="True">
            <ListBox.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/KeyIcon.png" Stretch="Uniform"/>
            </ListBox.Background>
        </ListBox>
        <ListBox Grid.Column="2" x:Name="DecBox" AllowDrop="True">
            <ListBox.Background>
                <ImageBrush Stretch="Uniform" ImageSource="pack://siteoforigin:,,,/Resources/DecIcon.png"/>
            </ListBox.Background>
        </ListBox>
    </Grid>
</Window>
